@using Domain.Model
@model IEnumerable<WebApp.Models.Customer.CustomerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Список покупателей</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner ">
        <div class="carousel-item active" data-interval="10000">
            <div class="card d-block mx-auto" style="width: 18rem;">
                <img src="https://img.icons8.com/plasticine/2x/user.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Model.ElementAt(0).Name</h5>
                    <p class="card-text">@Model.ElementAt(0).Phone</p>
                    <p class="card-text">@Model.ElementAt(0).Email</p>
                    <div class="dropup dropright mt-4">
                        <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Operations
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(0).Id }, new { @class = "btn btn-link text-info" })
                            <br />
                            @Html.ActionLink("Details", "Details", new { id = Model.ElementAt(0).Id }, new { @class = "btn btn-link text-primary" })
                            <br />
                            @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(0).Id }, new { @class = "btn btn-link text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @for(int i = 1; i < Model.ToList().Count; i++)
        {
            <div class="carousel-item" data-interval="2000">
                <div class="card d-block mx-auto" style="width: 18rem;">
                    <img src="https://img.icons8.com/plasticine/2x/user.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model.ElementAt(i).Name</h5>
                        <p class="card-text">@Model.ElementAt(i).Phone</p>
                        <p class="card-text">@Model.ElementAt(i).Email</p>
                        <div class="dropup dropright mt-4">
                            <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Operations
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(i).Id }, new { @class = "btn btn-link text-info" })
                                <br />
                                @Html.ActionLink("Details", "Details", new { id = Model.ElementAt(i).Id }, new { @class = "btn btn-link text-primary" })
                                <br />
                                @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(i).Id }, new { @class = "btn btn-link text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@section scripts
{
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
}