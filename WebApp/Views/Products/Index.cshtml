@using Antlr.Runtime.Tree
@model IEnumerable<WebApp.Models.Product.ProductViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Каталог продукции</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3 mb-4">
            <img src="https://retail-loyalty.org/upload/iblock/a9d/31c5dd4208e9833b56ea01d6c744d282.jpg" class="card-img-top" alt="">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Price</p>
                    @Html.ActionLink("Купить", "Buy", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                    <div class="dropdown dropright mt-4">
                        <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Operations
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-link text-info" })
                            <br />
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-link text-primary" })
                            <br />
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-link text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts
{
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
}


